<%- |
  Stdlib::Absolutepath $hazelcast_library,
| -%>
JAVA_HOME=<%= $::hazelcast::java_home %>
<% $class_path_size = $::hazelcast::class_path.size -%>
<% if $class_path_size > 0 { -%>
CLASSPATH=<%= $hazelcast_library -%><% $::hazelcast::class_path.each |Integer $index, String $jar| { -%>
:<%= $jar -%><%- if $index < $class_path_size { -%>:<% } -%>
<% } else { -%>
CLASSPATH=<%= $hazelcast_library -%>
<% } -%>
